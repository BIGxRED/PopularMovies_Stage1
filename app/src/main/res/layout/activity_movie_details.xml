<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/iv_movie_poster"
        android:layout_width="160dp"
        android:layout_height="240dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/tv_movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"/>
        <!--android:gravity="center"-->


    <TextView
        android:id="@+id/tv_movie_release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_below="@id/tv_movie_title"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/tv_movie_vote_average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_below="@id/tv_movie_release_date"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/tv_movie_vote_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_movie_vote_average" />


    <!--Poster image-->

    <!--Horizontal separator-->
    <View
        android:id="@+id/separator"
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider"
        android:layout_margin="8dp"
        android:layout_below="@id/iv_movie_poster"
        android:layout_centerHorizontal="true"/>

    <!--Overview heading-->
    <TextView
        android:id="@+id/overview_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Overview"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_below="@id/separator"/>

    <TextView
        android:id="@+id/tv_movie_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="italic"
        android:layout_below="@id/overview_heading"/>

</RelativeLayout>
